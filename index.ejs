<main>
    <%- include('public/partials/header.ejs') %>
    <h1 class="title">Welcome to The I Word</h1>
    <div class="form-container">
        <p class="form-text">Edit your Blog</p>
        <p class="form-text">Fill the form for creating blog</p>
        <form action="/home" method="post">
            <label for="bTitle">Blog Title</label>
            <input type="text" id="bTitle" name="blogTitle"
            placeholder="Your Title Here..."
            required/>

            <label for="bDes">Bllog description</label>
            <textarea type="text" name="blogDes" id="bDes"
            placeholder="Your blog here..."
            rows="6"
            required></textarea>
            <input type="submit" value="PUBLISH"/>
        </form>
    </div>
</main>